<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= image_tag(@picture.image_url || 'blank.png', id: 'pic') %>
    <%= f.fp_file_field :image, "Pick a picture to upload", dragdrop: true, onchange: '$("#pic").attr("src", arguments[0].files[0].url)', data: { 'fp-mimetypes'=>'image/jpg,image/png,image/jpeg' } %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
